{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": 0,
    "arrow-body-style": [2, "as-needed"],
    "arrow-parens": ["error", "as-needed"]
  }
}
